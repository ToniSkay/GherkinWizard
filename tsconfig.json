{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "components": ["common/components"],
      "utils": ["common/utils"],
      "enums": ["common/enums"],
      "types": ["common/types"],
      "stores": ["common/stores"],
      "hooks": ["common/hooks"],
      "styles/*": ["src/styles/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ]
}
